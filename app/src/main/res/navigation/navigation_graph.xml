<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/main_note_fragment">

    <fragment
        android:id="@+id/add_edit_fragment"
        android:name="com.ameen.notekeeper.ui.fragment.AddEditFragment"
        tools:layout="@layout/fragment_add_edit_note" />

    <fragment
        android:id="@+id/main_note_fragment"
        android:name="com.ameen.notekeeper.ui.fragment.MainFragment"
        tools:layout="@layout/fragment_home_note">
        <action
            android:id="@+id/action_main_note_fragment_to_add_edit_fragment"
            app:destination="@id/add_edit_fragment" />
    </fragment>
